{
  "name": "user-capture-app",
  "appId": "com.usercapture.app",
  "productName": "User Capture",
  "version": "1.3.1",
  "description": "User Capture - Aplicación de captura de imágenes de usuarios",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "node -e \"require('fs').rmSync('node_modules', {recursive:true, force:true}); require('fs').rmSync('dist', {recursive:true, force:true}); require('fs').rmSync('build', {recursive:true, force:true})\"",
    "clean:dist": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true}); require('fs').rmSync('build', {recursive:true, force:true})\"",
    "install:clean": "npm run clean && npm ci",
    "rebuild:native": "node scripts/rebuild-native.mjs --with-sharp",
    "rebuild:native:sqlite": "node scripts/rebuild-native.mjs",
    "dist:win": "npm run rebuild:native && electron-builder --win nsis --x64",
    "dist:win:portable": "npm run rebuild:native && electron-builder --win portable --x64",
    "dist:win:zip": "npm run rebuild:native && electron-builder --win zip --x64",
    "dist:mac": "npm run rebuild:native && electron-builder --mac dmg --x64",
    "dist:linux": "npm run rebuild:native && electron-builder --linux AppImage --x64",
    "postinstall": "echo skip electron-rebuild",
    "release": "standard-version && npm run dist:win",
    "release:minor": "standard-version --release-as minor && npm run dist:win",
    "release:major": "standard-version --release-as major && npm run dist:win",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:performance": "jest tests/unit/table/virtualScroll.performance.test.js"
  },
  "keywords": [
    "electron"
  ],
  "author": "Víctor Pineda Ribes",
  "dependencies": {
    "archiver": "^7.0.1",
    "chokidar": "^3.5.3",
    "fast-xml-parser": "^4.3.4",
    "googleapis": "^131.0.0",
    "pdfkit": "^0.17.2",
    "sharp": "^0.34.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "standard-version": "^9.5.0"
  },
  "build": {
    "appId": "com.usercaptureapp.app",
    "productName": "User Capture",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "assets/**/*",
      "src/**/*",
      "!dist/**/*",
      "!build/**/*",
      "!.vscode/**/*",
      "!**/*.map",
      "!**/test{,s}/**/*",
      "!**/__tests__/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "node_modules/sqlite3/**/*",
      "node_modules/sharp/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  },
  "license": "CC-BY-NC-4.0"
}
