{
  "name": "user-capture-app",
  "version": "1.0.0",
  "description": "User Capture - Aplicación de captura de imágenes de usuarios",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win-dir": "electron-builder --win --dir",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "postinstall": "npx @electron/rebuild -f -w sqlite3"
  },
  "keywords": [
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.5.3",
    "fast-xml-parser": "^4.3.4",
    "googleapis": "^131.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.usercaptureapp.app",
    "productName": "User Capture",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
